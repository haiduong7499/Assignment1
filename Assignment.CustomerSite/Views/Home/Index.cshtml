@model IEnumerable<Assignment.Shared.ProductRespone>
@{
    ViewData["Title"] = "Home Page";
}


<div class="single-product-slider mt-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Our Products Ralated</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- single product -->
            @foreach (var item in ViewBag.ProductCate)
            {

                @await Component.InvokeAsync("RelatedProduct", item);
            }
        </div>
        <div class="row">
            <!-- single product -->
            @foreach (var item in ViewBag.ProductCate1)
            {
                @await Component.InvokeAsync("RelatedProduct", item);
            }
        </div>
    </div>
</div>

